<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.sccraft.arenacontrol.CommandEditActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/world_time"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/world_timeDay" />

    <EditText
        android:id="@+id/editText_command_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="time set day" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/world_timeNight" />

    <EditText
        android:id="@+id/editText_command_night"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="time set night" />

</LinearLayout>
